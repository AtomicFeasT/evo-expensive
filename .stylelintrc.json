{
	"plugins": [
		"stylelint-order"
	],
  "extends": ["stylelint-config-standard-scss", "stylelint-config-standard", ""],
  "files": ["./packages/**/*.scss"],
  "customSyntax": "postcss-scss",
	"rules": {
    "at-rule-no-unknown": null,
		"order/order": [
			"custom-properties",
			"declarations"
		],
		"order/properties-order": [
			"width",
			"height"
		]
	}
}