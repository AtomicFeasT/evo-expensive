// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String  @id
  username     String? @unique
  avatarUrl    String
  name         String
  email        String  @unique
  password     String?
  githubId     String? @unique
  tokenVersion Int     @default(0)

  refreshToken RefreshToken[]

  settingsId String?
  settings   Settings? @relation(fields: [settingsId], references: [id])

  roles       Role[]
  permissions Permission[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Settings {
  id String @id

  language String? @default("string")
  theme    String? @default("dark")
  User     User[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("settings")
}

model RefreshToken {
  id        String @id
  expiresIn Int

  platform String

  userId String
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("refresh_tokens")
}

model Role {
  id          String @id
  name        String @unique
  description String

  user User[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("roles")
}

model Permission {
  id          String @id
  name        String @unique
  description String

  user User[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("permissions")
}
