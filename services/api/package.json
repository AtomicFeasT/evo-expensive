{
  "name": "@neo/api",
  "version": "0.0.1",
  "description": "The GraphQL Data layer that communicates with the front-end",
  "author": "Vitor Gouveia <vitorneves.gouveia10@gmail.com>",
  "repository": "https://github.com/Neo-Florescence/neo-expensive",
  "license": "MIT",
  "private": true,
  "main": "./dist/index.js",
  "scripts": {
    "watch": "tsc -w",
    "dev": "nodemon dist/index.js",
    "build": "tsc",
    "start": "yarn build && node dist/index.js",
    "migrate": "prisma db push",
    "env": "gen-env-types -k -e . -o ./src/@types/env.d.ts",
    "heroku:core": "yarn workspace @neo/core build",
    "heroku:mail": "yarn workspace @neo/mail build",
    "heroku:users": "yarn workspace @neo/users build",
    "heroku:api": "yarn build",
    "heroku": "yarn migrate && npm-run-all 'heroku:*' && node dist/index.js"
  },
  "packageManager": "yarn@3.1.1",
  "dependencies": {
    "@neo/core": "*",
    "@neo/mail": "*",
    "@neo/users": "*",
    "@prisma/client": "^3.9.2",
    "cors": "^2.8.5",
    "dotenv-safe": "^8.2.0",
    "express": "^4.17.3",
    "nodemailer": "^6.7.2",
    "npm-run-all": "^4.1.5",
    "prisma": "^3.9.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "17.0.18",
    "@types/nodemailer": "^6.4.4",
    "gen-env-types": "^1.3.2",
    "nodemon": "^2.0.15",
    "typescript": "^4.3.5"
  }
}
