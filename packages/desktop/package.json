{
  "name": "@neo/desktop",
  "version": "0.0.1",
  "description": "A electron desktop wrapper for neo expensive",
  "main": "index.js",
  "scripts": {
    "dev": "electron ."
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^13.1.8"
  },
   "build": {
    "appId": "com.florescer.neoexpensive",
    "productName": "Neo Expensive",
    "files": [
      "dist/"
    ],
    "win": {
      "target": [
        "portable"
      ]
    },
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "snap",
        "tar.gz",
        "rpm"
      ],
      "category": "Development"
    },
    "directories": {
      "buildResources": "build",
      "output": "release"
    }
  }
}
