{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": {
          "node": "current"
        }
      }
    ],
    "@babel/preset-typescript"
  ],
  "plugins": [
    ["module-resolver", {
      "alias": {
        "@src/*": "./src/*",
        "@lib": "./src/lib",
        "@services": "./src/services",
        "@hooks": "./src/hooks" 
      }
    }]
  ],
  "ignore": [
    "./src/tests"
  ]
}