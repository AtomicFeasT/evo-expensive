{
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": ".",
    "sourceMap": false,
    "target": "es2017",
    "module": "commonjs",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "emitDecoratorMetadata": true,
    "types": [
      "jest", "node"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "../../node_modules/@types",
      "./src/@types"
    ],
    "resolveJsonModule": true,
    "paths": {
      "@user/repositories/*": ["src/domain/user/repositories/*"],
      "@user/entities": ["src/domain/user/entities"],
      "@user/repositories": ["src/domain/user/repositories"],
      "@domain/*": ["src/domain/*"],
      "@infra/*": ["src/infra/*"],
      "@user/entities/*": ["src/domain/user/entities/*"],
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
