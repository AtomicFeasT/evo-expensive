{
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": ".",
    "sourceMap": false,
    "target": "es2017",
    "module": "commonjs",
    "allowJs": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "./node_modules/@types",
      "../../node_modules/@types",
      "./src/@types"
    ],
    "types": [
      "node", "jest"
    ],
    "resolveJsonModule": true,
    "paths": {
      "@infra/*": [
        "src/infra/*"
      ],
      "@user": ["src/domain/user"],
      "@user/*": ["src/domain/user/*"]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts"
  ]
}