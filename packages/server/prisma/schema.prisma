// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String        @id
  created_at    DateTime
  updated_at    DateTime
  name          String
  email         String        @unique
  password      String
  refresh_token RefreshToken?

  @@map("users")
}

model RefreshToken {
  id        String @id
  expiresIn Int

  userId String
  user   User   @relation(fields: [userId], references: [id])

  @@map("refresh_token")
}
