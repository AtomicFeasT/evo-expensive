// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String   @id
  created_at DateTime
  updated_at DateTime
  name       String
  email      String   @unique
  password   String
  token      Token?
}

model Token {
  id        String @id
  userId    String
  expiresIn String
  user      User   @relation(fields: [userId], references: [id])
}
