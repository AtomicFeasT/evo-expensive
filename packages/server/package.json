{
  "name": "@neo/server",
  "version": "0.0.1",
  "description": "The back-end code for neo-expensive",
  "main": "build/index.js",
  "repository": "https://github.com/EsquemaFlorescer/neo-expensive",
  "author": "vitor gouveia",
  "license": "MIT",
  "private": true,
  "scripts": {
    "migrate": "prisma db push",
    "queue": "tsnd --transpile-only --respawn --exit-child --ignore-watch node_modules -r tsconfig-paths/register src/queue.ts",
    "dev": "NODE_ENV=development tsnd --transpile-only --respawn --exit-child --ignore-watch node_modules -r tsconfig-paths/register src/index.ts",
    "test:reset": "prisma migrate reset -f",
    "test:push": "prisma db push",
    "test:jest": "jest --detectOpenHandles",
    "test": "npm-run-all test:*",
    "build": "babel src --extensions \".js,.ts\" --out-dir build --copy-files --no-copy-ignored",
    "start": "node build/index.js"
  },
  "dependencies": {
    "@prisma/client": "^2.29.1",
    "bull": "^3.29.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "nodemailer": "^6.6.3",
    "npm-run-all": "^4.1.5",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.15.0",
    "@babel/node": "^7.14.9",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-typescript": "^7.15.0",
    "@types/bull": "^3.15.3",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.6.1",
    "@types/nodemailer": "^6.4.4",
    "babel-plugin-module-resolver": "^4.1.0",
    "dotenv": "^10.0.0",
    "jest": "^27.0.6",
    "prisma": "^2.29.1",
    "ts-jest": "^27.0.5",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.10.1"
  }
}
