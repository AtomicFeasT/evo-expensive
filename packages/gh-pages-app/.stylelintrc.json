{
  "extends": ["stylelint-config-standard", "stylelint-config-prettier"],
  "plugins": ["stylelint-order", "stylelint-scss"],
  "rules": {
    "order/order": [
      "custom-properties",
      "declarations"
    ],
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": []
      }
    ],
    "order/properties-order": [
      "width",
      "height"
    ],
    "indentation": "tab",
    "declaration-block-trailing-semicolon": "always"
  }
}
