{
  "name": "@neo/wunderlust",
  "version": "0.0.1",
  "description": "The CSS design system that powers Neo Expensive.",
  "repository": "https://github.com/EsquemaFlorescer/neo-expensive",
  "author": "Vitor Gouveia <vitorneves.gouveia10@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "next": "rimraf ../dashboard/src/styles && sass --watch --no-source-map src:../dashboard/src/styles",
    "dev": "rimraf dist && sass --watch --no-source-map src:dist",
    "build": "rimraf build && sass --no-source-map --style=compressed --update src:build",
    "start": "postcss --no-map ./build/**/*.css --dir final"
  },
  "dependencies": {
    "@koddsson/postcss-sass": "^5.0.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.4",
    "postcss-cli": "^9.0.2",
    "postcss-import": "^14.0.2",
    "postcss-scss": "^4.0.2",
    "rimraf": "^3.0.2",
    "sass": "^1.43.5"
  }
}
