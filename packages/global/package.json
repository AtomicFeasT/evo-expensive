{
  "name": "@neo/global",
  "version": "0.0.1",
  "description": "The Global CSS Configuration of Neo Expensive's Design system.",
  "author": "Vitor Gouveia <vitorneves.gouveia10@gmail.com>",
  "repository": "https://github.com/Neo-Florescence/neo-expensive",
  "license": "MIT",
  "private": true,
  "main": "./dist/index.css",
  "packageManager": "yarn@3.1.1",
  "scripts": {
    "compile:postcss": "yarn workspace @neo/postcss build",
    "dev": "yarn compile:postcss && postcss --watch ./src/index.scss -o ./dist/index.css --env development --verbose",
    "build": "yarn compile:postcss && postcss ./src/index.scss -o ./dist/index.css --env development --verbose --map"
  },
  "devDependencies": {
    "@csstools/normalize.css": "^12.0.0",
    "@neo/postcss": "*",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.6",
    "postcss-cli": "^9.1.0",
    "postcss-font-magician": "^3.0.0",
    "rimraf": "^3.0.2",
    "sass": "^1.49.7"
  }
}
